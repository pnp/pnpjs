{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "composite": false,
        "baseUrl": ".",
        "rootDir": "../../",
        "outDir": "../../build/debugging",
        "incremental": true,
        "noUnusedLocals": false,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
