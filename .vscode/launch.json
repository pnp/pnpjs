{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/debug/launch/main.ts",
      "args": [],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "build",
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy",
        "--experimental-loader",
        "file://${workspaceRoot}/build/debugging/tools/local-module-resolver/esm-debug.js"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/build/debugging/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Debug Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/mocha",
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "test-build",
      "sourceMaps": true,
      "outFiles": [],
      "args": [
        "--verbose",
        "--logging",
        "Error",
        "--record",
        "write"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Debug Build System",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/tools/buildsystem/bin/buildsystem.ts",
      "args": [
        "-n",
        "package"
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "build-buildsystem",
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/tools/buildsystem/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Debug Watch",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/debug/launch/main.ts",
      "args": [],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "build-watch",
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy",
        "--experimental-loader",
        "file://${workspaceRoot}/build/debugging/tools/local-module-resolver/esm-debug.js"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/build/debugging/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}